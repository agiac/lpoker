          <label for="input-value-1">1</label>
          <input type="radio" name="vote" value="2" id="input-value-2"/>
          <label for="input-value-2">2</label>
          <input type="radio" name="vote" value="3" id="input-value-3"/>
          <label for="input-value-3">3</label>
          <input type="radio" name="vote" value="5" id="input-value-5"/>
          <label for="input-value-5">5</label>
          <input type="radio" name="vote" value="8" id="input-value-8"/>
          <label for="input-value-8">8</label>
          <input type="radio" name="vote" value="13"id="input-value-13" />
          <label for="input-value-13">13</label>
          <input type="radio" name="vote" value="21"id="input-value-21" />
          <label for="input-value-21">21</label>
          <input type="radio" name="vote" value="34"id="input-value-34" />
          <label for="input-value-34">34</label>
          <input type="radio" name="vote" value="?" id="input-value-?"/>
          <label for="input-value-?">?</label>
          <input type="radio" name="vote" value="ðŸ’©" id="input-value-ðŸ’©"/>
          <label for="input-value-ðŸ’©">ðŸ’©</label>
          <button type="submit">Submit</button>
        </fieldset>
      </form>
      <section id="controls">
        <button type="button" id="show-results-btn">Show results</button>
        <button type="button" id="start-new-session-btn">Start new session</button>
        <button type="button" id="cheat-btn" disabled>Cheat</button>
      </section>
      <div id="layout">
        <section id="participnats">
          <h3>Participants</h3>
          <ul id="participants-list"></ul>
        </section>
        <aside id="notifications">
          <h3>Notifications</h3>
          <ul id="notifications-list"></ul>
        </aside>
      </div>
    </main>
    <script>
      window.__roomId__ = "<%=roomId%>";
      window.__userId__ = "<%=userId%>";
    </script>
    <script src="/js/room-page/index.js" type="module"></script>
  </body>
</html>
